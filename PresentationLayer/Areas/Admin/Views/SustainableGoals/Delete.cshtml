
@model EntityLayer.Concrete.SustainabilityGoal

@{
    ViewData["Title"] = "SKA Hedefini Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning mt-4">
    <p><strong>@Model.Title</strong> adlı hedefi silmek üzeresiniz. Emin misiniz?</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Hayır, Geri Dön</a>
</form>
