
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<EntityLayer.Concrete.Plastic>

<h2>Plastikler</h2>

<a class="btn btn-success mb-3" asp-action="Create">Yeni Plastik Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Maliyet</th>
            <th>Etki</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PlasticName</td>
                <td>@item.Cost</td>
                <td>@item.EnvironmentalImpact</td>
                <td>@item.AddedDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.PlasticID">Düzenle</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.PlasticID">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
