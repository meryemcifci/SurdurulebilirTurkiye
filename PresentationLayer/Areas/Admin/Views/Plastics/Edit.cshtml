@model EntityLayer.Concrete.Plastic
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>


<form asp-action="Edit" method="post" class="mt-4">
    <input type="hidden" asp-for="PlasticID" />
    <div class="form-group">
        <label asp-for="PlasticName" class="control-label"></label>
        <input asp-for="PlasticName" class="form-control" />
        <span asp-validation-for="PlasticName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductionProcess" class="control-label"></label>
        <input asp-for="ProductionProcess" class="form-control" />
        <span asp-validation-for="ProductionProcess" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
