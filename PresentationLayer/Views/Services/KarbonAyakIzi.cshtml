@section Scripts {
    <script>
        $(document).ready(function() {
            // Kategori butonlarına tıklama olayı
            $('.category-btn').click(function() {
                var category = $(this).data('category');

                // Aktif buton stili
                $('.category-btn').removeClass('active').addClass('btn-outline-success');
                $(this).removeClass('btn-outline-success').addClass('active btn-success');

                // Seçilen kategoriye göre formu yükle
                loadForm(category);
            });

            function loadForm(category) {
                var formContent = $('#formContent');

                // Formun içeriğini temizle
                formContent.empty();

                // Kategori bazlı form içeriği
                switch(category) {
                    case 'Elektrik':
                        formContent.html(`
                            <div class="form-group mb-3">
                                <label for="elektrikTuketim">Aylık Elektrik Tüketimi (kWh)</label>
                                <input type="number" class="form-control" id="elektrikTuketim" name="ElektrikTuketim" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="elektrikKaynak">Elektrik Kaynağı</label>
                                <select class="form-control" id="elektrikKaynak" name="ElektrikKaynak">
                                    <option value="1">Fosil Yakıt</option>
                                    <option value="0.5">Karma (Yenilenebilir + Fosil)</option>
                                    <option value="0.1">Tamamen Yenilenebilir</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success w-100 mt-3">Hesapla</button>
                        `);
                        break;
                    case 'Dogalgaz':
                        formContent.html(`
                            <div class="form-group mb-3">
                                <label for="dogalgazTuketim">Aylık Doğalgaz Tüketimi (m³)</label>
                                <input type="number" class="form-control" id="dogalgazTuketim" name="DogalgazTuketim" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="evYalitim">Ev Yalıtım Durumu</label>
                                <select class="form-control" id="evYalitim" name="EvYalitim">
                                    <option value="1.5">Kötü Yalıtım</option>
                                    <option value="1">Orta Düzey Yalıtım</option>
                                    <option value="0.7">İyi Yalıtım</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success w-100 mt-3">Hesapla</button>
                        `);
                        break;
                    case 'Araba':
                        formContent.html(`
                            <div class="form-group mb-3">
                                <label for="arabaYakitTip">Yakıt Tipi</label>
                                <select class="form-control" id="arabaYakitTip" name="ArabaYakitTip">
                                    <option value="benzin">Benzin</option>
                                    <option value="dizel">Dizel</option>
                                    <option value="lpg">LPG</option>
                                    <option value="elektrik">Elektrik</option>
                                    <option value="hibrit">Hibrit</option>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label for="arabaKm">Aylık Ortalama Km</label>
                                <input type="number" class="form-control" id="arabaKm" name="ArabaKm" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="yakitTuketim">Ortalama Yakıt Tüketimi (100 km'de)</label>
                                <input type="number" step="0.1" class="form-control" id="yakitTuketim" name="YakitTuketim" required>
                            </div>
                            <button type="submit" class="btn btn-success w-100 mt-3">Hesapla</button>
                        `);
                        break;
                    case 'Diger':
                        formContent.html(`
                            <div class="form-group mb-3">
                                <label for="beslenmeStil">Beslenme Stili</label>
                                <select class="form-control" id="beslenmeStil" name="BeslenmeStil">
                                    <option value="2">Et Ağırlıklı</option>
                                    <option value="1.5">Dengeli</option>
                                    <option value="1">Vejetaryen</option>
                                    <option value="0.8">Vegan</option>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label for="geriDonusum">Geri Dönüşüm Alışkanlıkları</label>
                                <select class="form-control" id="geriDonusum" name="GeriDonusum">
                                    <option value="1.2">Hiç Yapmıyorum</option>
                                    <option value="1">Bazen Yapıyorum</option>
                                    <option value="0.8">Düzenli Yapıyorum</option>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label for="alisveris">Alışveriş Alışkanlıkları</label>
                                <select class="form-control" id="alisveris" name="Alisveris">
                                    <option value="1.5">Çok Fazla Yeni Ürün Alırım</option>
                                    <option value="1">Dengeli</option>
                                    <option value="0.7">Minimalist, Genelde İkinci El Tercih Ederim</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success w-100 mt-3">Hesapla</button>
                        `);
                        break;
                    case 'Toplam':
                        formContent.html(`
                            <div class="alert alert-success">
                                <h5 class="text-center">Toplam Karbon Ayak İzi Sonuçlarınız</h5>
                                <div id="sonuclar">
                                    <p>Hesaplama yapmak için lütfen önce diğer kategorileri doldurun.</p>
                                </div>
                            </div>
                            <div class="text-center mt-3">
                                <button type="button" class="btn btn-outline-success" id="pdfIndir">
                                    <i class="fas fa-download"></i> Sonuçları İndir
                                </button>
                                <button type="button" class="btn btn-outline-primary" id="paylas">
                                    <i class="fas fa-share-alt"></i> Sonuçları Paylaş
                                </button>
                            </div>
                        `);
                        break;
                }
            }

            // Sayfa yüklendiğinde varsayılan olarak Elektrik kategorisini göster
            $('.category-btn[data-category="Elektrik"]').click();
        });
    </script>
}
